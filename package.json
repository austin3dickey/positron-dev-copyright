{
	"name": "positron-dev-copyright",
	"displayName": "Positron Copyright Header Formatter",
	"description": "Automatically updates Posit copyright header year ranges on file save",
	"version": "0.1.1",
	"publisher": "positron-dev",
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Formatters",
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {},
	"scripts": {
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"package": "vsce package --allow-missing-repository",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"@types/vscode": "^1.85.0",
		"@vscode/vsce": "^3.0.0",
		"typescript": "^5.3.0"
	}
}
